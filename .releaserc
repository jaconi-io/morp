branches:
- main

plugins:
- - "@semantic-release/commit-analyzer"
  - releaseRules:
    - type: chore
      scope: deps
      release: patch

- "@semantic-release/release-notes-generator"

- - "@semantic-release/exec"
  - prepareCmd: sed -i 's/^version = ".*"$/version = "${nextRelease.version}"/' build.gradle.kts

- - semantic-release-github-pullrequest
  - assets:
    - CHANGELOG.md
    - build.gradle.kts
    baseRef: main
